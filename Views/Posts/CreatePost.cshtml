@model List<BlogCRUD.Models.Authour>
@{
    ViewData["Title"] = "CreatePost";
}
<head>
    <link href="~/css/forms.css" rel="stylesheet" />
</head>

<h1>Add a new post</h1>
<form asp-action="CreatePost" method="post">
    <div class="form-control">
        <label for="title">Title</label>
        <input type="text" id="title" name="Title" required>
    </div>
    <div class="form-control">
        <label for="summary">Summary</label>
        <input type="text" id="summary" name="summary" required maxlength="255">
    </div>
    <div class="form-control">
        <label for="content">Post Content</label>
        <textarea id="content" name="body" required rows="5"></textarea>
    </div>
    <div class="form-control">
        <label for="author">Select Author</label>

        <select id="author" name="authorId">
        @foreach(var a in Model){
         <option value="@a.Id">
             @a.Name
         </option>    
        }
        </select>
    </div>
    <button class="btn">Add Post</button>
</form>
