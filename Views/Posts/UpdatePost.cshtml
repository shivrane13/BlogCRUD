@model BlogCRUD.Models.Post
@{
    ViewData["Title"] = "UpdatePost";
}

<h1>UpdatePost</h1>
<form asp-action="UpdatePost" method="post">
    <div class="form-control">
        <label for="title">Title</label>
        <input type="text" id="title" name="Title" value="@Model.Title" required>
    </div>
    <div class="form-control">
        <label for="summary">Summary</label>
        <input type="text" value="@Model.summary" id="summary" name="summary" required maxlength="255">
    </div>
    <div class="form-control">
        <label for="content">Post Content</label>
        <textarea id="content" name="body"  required rows="5">@Model.body</textarea>
    </div>
    <button class="btn">Update Post</button>
</form>
