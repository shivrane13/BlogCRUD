@model BlogCRUD.Models.Post
@{
    ViewData["Title"] = "PostById";
}
<main id="post-detail">
    <h1>@Model.Title</h1>
    <section id="post-meta">
        <p>@Model.date</p>
        <p>@Model.Authour?.Name</p>
        <p>@Model.Authour?.email</p>
    </section>
    <hr>
    <section>
        <p id="body">@Model.body</p>
    </section>
</main>